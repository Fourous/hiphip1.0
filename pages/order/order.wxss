/* pages/order/order.wxss */
page{
   width: 100%;
   height: 100%;
}
.order{
   width: 100%;
   height: 100%;
   background: #DBDBDB;
}
.order_tab{
   position: relative;
   z-index: 1111;
   top: 0rpx;
   left: 0rpx;
   width: 100%;
   height: 80rpx;
   background: white;
}
.tab{
   position: fixed;
   z-index: 1111;
   top: 0rpx;
   left: 0rpx;
   width: 100%;
   height: 80rpx;
   font-size: 15px;
   border-bottom: 20rpx solid rgb(245, 245, 245);
   background: white;
}
.tab_item{
   display: inline-block;
   width: 25%;
   text-align: center;
   height: 80rpx;
   line-height: 80rpx;
}
.tab_item.active{
   position: relative;
   border-bottom: 3rpx solid #FF0000; 
}
.order_content{
   width: 100%;
   margin-top: 20rpx;
}
.content{
   width: 100%;
}
.content_item{
   width: 100%;
}
.item{
   height: 250rpx;
   width: 100%;
   border-bottom: 20rpx solid rgb(245, 245, 245);
   padding-top: 20rpx;
   padding-left: 20rpx;
   padding-right: 20rpx;
}
.order_null{
   color: white;
   width: 100%;
   text-align: center;
   line-height: 1000rpx;
   background-color: #DBDBDB;
}
.item_pic{
   display: inline-block;
   height: 230rpx;
   width: 30%;
   margin-right: 20rpx;
   background: white;
   border: 1rpx solid rgb(245, 245, 245);
}
.item_content{
   display: inline-block;
   height: 230rpx;
   width: 60%;
}
.item_content_txt{
   height: 130rpx;
   width: 100%;
   margin-bottom: 20rpx;
   font-size: 16px;
   text-align: center;
   line-height: 130rpx;
}
.txt{
   width: 100%;
   height: 50%;
   text-align: center;
   line-height: 65rpx;
}
.txt1{
   width: 100%;
   height: 100%;
   text-align: center;
   line-height: 130rpx;
}
.price{
   width: 100%;
   height: 50%;
   text-align: right;
   line-height: 65rpx;
}
.item_content_btn{
   height: 80rpx;
   width: 100%;
   float: right;
}
.btn{
   width: 130rpx;
   font-size: 9px;
   float: right;
   margin-right: 10rpx;
   background: rgb(245, 245, 245);
   color: red;
   border: red;
}

